{{> header}}
<main>
    <section class="grid gap-2 pt-4 w-11/12 items-center grid-cols-1 grid-rows-3 grid-rows-1 m-auto sm:grid-cols-3 sm:grid-rows-1">
            <article class="h-[250px] sm:h-[400px] w-full cursor-pointer shadow-lg hover:-translate-y-1 hover:-translate-x-1 transition duration-300 ease-in-out" style="background: url('/image/a.jpg') no-repeat center center / cover ">
                <a href="/productos?categoria=hombre" class="w-full h-full p-4 flex items-center justify-center transition ease-in-out">
                    <h2 class="text-4xl font-bold bg-white bg-opacity-50 px-8 py-4 hover:bg-opacity-100 font-anton">Hombres</h2>
                </a>
            </article>
            <article class="h-[250px] sm:h-[400px] w-full cursor-pointer shadow-lg hover:-translate-y-1 hover:-translate-x-1 transition duration-300 ease-in-out" style="background: url('/image/b.jpg') no-repeat center center / cover">
                <a href="/productos?categoria=niño" class="w-full h-full p-4 flex items-center justify-center transition ease-in-out">
                    <h2 class="text-4xl font-bold bg-white bg-opacity-50 px-8 py-4 hover:bg-opacity-100 font-anton">Niños</h2>
                </a>
            </article>

            <article class="h-[250px] sm:h-[400px] w-full cursor-pointer shadow-lg hover:-translate-y-1 hover:-translate-x-1 transition duration-300 ease-in-out" style="background: url('/image/c.jpg') no-repeat center center / cover">
                <a href="/productos?categoria=mujer" class="w-full h-full p-4 flex items-center justify-center transition ease-in-out">
                    <h2 class="text-4xl font-bold bg-white bg-opacity-50 px-8 py-4 hover:bg-opacity-100 font-anton">Mujeres</h2>
                </a>
            </article>
    </section>

    <section class="flex flex-col gap-2 w-11/12 items-center m-auto">
        <h2 class="text-3xl font-normal py-8 text-center">Mujer</h2>
        <div class="swiper mySwiper h-full w-full">
            <div class="swiper-wrapper flex flex-nowarp scroll-smooth">
            {{#each products}}
                <div class="swiper-slide flex-[1_0_auto] w-[200px] h-[450px]">
                {{> card_product title=this.title price=this.price thumbnails=this.thumbnails }}
                </div>
            {{/each}}
            </div>
            <br>
            <div class="swiper-pagination"></div>
        </div>
    </section>
    
    <section class="flex flex-col gap-2 w-11/12 items-center m-auto">
        <h2 class="text-3xl font-normal py-8 text-center">Hombre</h2>
        <div class="swiper mySwiper h-full w-full">
            <div class="swiper-wrapper flex flex-nowarp scroll-smooth">
            {{#each products_promo}}
                <div class="swiper-slide flex-[1_0_auto] w-[200px] h-full">
                {{> card_product title=this.title price=this.price thumbnails=this.thumbnails }}
                </div>
            {{/each}}
            </div>
            <br>
            <div class="swiper-pagination"></div>
        </div>
    </section>

</main>
{{> footer}}
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
    let swiper = new Swiper(".mySwiper", {
    slidesPerView: 2,
    spaceBetween: 10,
    pagination: {
        el: ".swiper-pagination",
        clickable: true,
    },
    breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 4,
          spaceBetween: 20,
        },
        1024: {
          slidesPerView: 5,
          spaceBetween: 20,
        },
      },
    });
</script>