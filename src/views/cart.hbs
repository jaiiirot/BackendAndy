<header class="py-4 px-8 flex">
  <div>
    <div class="absolute left-0 flex w-min justify-center flex-col items-center">
      <h1 id="title" class="text-[3rem] font-brygada style-logo" style="transform:scaleY(0.75)">ILICITO</h1>
    </div>
  </div>
  <div class="ml-auto">
    <div class="flex">
      <span class="d-inline-block">
        <img alt="Compra Segura" src="/image/guard.svg" class="h-[2rem]" />
      </span>
      <span class="flex flex-col">
        <span class="text-uppercase text-xs">Compra Segura</span>
        <p class="text-xs">100% Protegido</p>
      </span>
    </div>
  </div>
</header>
<main class="w-full py-8">
  <section class="w-11/12 m-auto">
    <div>
      <div
        class="relative after:absolute after:inset-x-0 after:top-1/2 after:block after:h-0.5 after:-translate-y-1/2 after:rounded-lg after:bg-gray-100"
      >
        <ol
          class="relative z-10 flex justify-between text-sm font-medium text-gray-500"
        >
          <li class="flex items-center gap-2 bg-white p-2">
            <span
              class="size-6 rounded-full bg-[#EF4444] text-center text-[10px]/6 font-bold text-white"
            > 1 </span>

            <span class="hidden sm:block"> Detalles </span>
          </li>

          <li class="flex items-center gap-2 bg-white p-2">
            <span
              class="size-6 rounded-full bg-gray-100 text-center text-[10px]/6 font-bold"
            >
              2
            </span>

            <span class="hidden sm:block"> Dirrecion </span>
          </li>

          <li class="flex items-center gap-2 bg-white p-2">
            <span
              class="size-6 rounded-full bg-gray-100 text-center text-[10px]/6 font-bold"
            > 3 </span>

            <span class="hidden sm:block"> Pago </span>
          </li>
        </ol>
      </div>
    </div>
    <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
      <div class="mx-auto max-w-3xl">
        <header class="text-center">
          <h1 class="text-xl font-bold text-gray-900 sm:text-3xl">Tu Carrito</h1>
        </header>

        <div class="mt-8">
          <ul class="space-y-4 list-item-cart">
            {{#each products_cart}}
              <li class="flex justify-between items-center" data-prod-id="{{this.pid}}">
                <div class="flex items-center space-x-4">
                  <img
                    src="{{this.photo.[0]}}"
                    alt="{{this.title}}"
                    class="w-16 h-16 object-cover rounded"
                  />
                  <div class="flex flex-col">
                    <span class="text-sm">{{this.title}}</span>
                    <span class="text-sm">$ <span class="price-item-prod">{{this.price}}</span></span>
                  </div>
                </div>
                <div class="flex gap-2 h-min items-center justify-end">
                  <div class=" w-[100px] flex gap-2 items-center justify-between">
                  <span
                    class="bg-[#000] text-white px-2 cursor-pointer reduce-item-{{this._id}}"
                  >-</span>
                  <span class="text-sm quantity-item-prod">{{this.quantity}}</span>
                  <span
                    class="bg-[#000] text-white px-2 cursor-pointer increase-item-{{this._id}}"
                  >+</span>
                  </div>
                <div class="">
                  <span
                    class="bg-[#EF4444] text-white px-2 cursor-pointer py-2 rounded-lg"
                  >
                  <i class="fa-solid fa-trash"></i>
                  </span>
                </div>
                </div>
              </li>
            {{/each}}
          </ul>

          <div class="mt-8 flex justify-end border-t border-gray-100 pt-8">
            <div class="w-screen max-w-lg space-y-4">
              <div class="space-y-0.5 text-sm text-gray-700">

                <div class="flex justify-between !text-base font-medium">
                  <h2 class="text-bold">Total</h2>
                  <h2>$ <span id="total-price"></span></h2>
                </div>
              </div>

              <div class="flex justify-end w-full gap-4 flex-wrap">
                <span
                  href="#"
                  id="delete-cart"
                  class="block rounded bg-gray-700 px-5 py-3 text-sm text-gray-100 transition hover:bg-gray-600 cursor-pointer"
                >
                  Eliminar carrito
                </span>
                <a
                  href="/api/carts/{{cart_id}}/purchase"
                  class="block rounded bg-gray-700 px-5 py-3 text-sm text-gray-100 transition hover:bg-gray-600"
                >
                  Finalizar compra
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<script>
  const item_price = document.querySelectorAll('.price-item-prod');
  const item_quantity = document.querySelectorAll('.quantity-item-prod');
  const total_price = document.getElementById('total-price');
  const itemActionButtons = document.querySelectorAll('.reduce-item, .increase-item');
  let total = 0;
  item_price.forEach((item,i) => {
    const price = parseInt(item.textContent) * parseInt(item_quantity[i].textContent);
    total += price
  })
  total_price.textContent = total;


</script>