<a href="/productos/{{type}}/{{_id}}" class="relative flex flex-col rounded-xl bg-white bg-clip-border text-gray-700 shadow-md">
  <div class="relative mx-4 mt-4 h-[150px] overflow-hidden rounded-xl bg-white bg-clip-border text-gray-700 flex justify-center md:h-[250px]">
    <img
      src="{{photo.[0]}}"
      class="h-full object-cover"
      alt="imagen {{title}}"
    />
  </div>
  <div class="p-6">
    <div class="mb-2 flex items-center justify-between">
    <p class="block font-sans text-sm font-normal leading-normal text-gray-700 antialiased opacity-75">
      remera
    </p>
      <p class="block font-sans text-base font-medium leading-relaxed text-blue-gray-900 antialiased">
        $ {{price}}
      </p>
    </div class="overflow-hidden">
      <p class="block font-sans text-xs font-medium leading-relaxed text-blue-gray-900 antialiased md:text-base">
        {{title}}
      </p>
  </div>
  <div class="p-2 pt-0 md:px-2">
    <button
      class="border-none outline w-full rounded-lg py-2 px-4 hover:bg-black hover:text-white transition-all duration-300 ease-in-out"
      type="button"
    >
      Ver
    </button>
  </div>
</a>