      <div class="mt-4 space-y-6 h-full flex flex-col justify-between items-center">
        <ul class="space-y-4 h-full overflow-y-scroll list-prod-cart">
          
        </ul>
        <div class="space-y-4 text-center">
          <a
            href="/carrito"
            class="block rounded border border-gray-600 px-5 py-3 text-sm text-gray-600 transition hover:ring-1 hover:ring-gray-400"
          >
            Ver mi carrito (2)
          </a>
        </div>
      </div>
    </aside>
  </section>
</header>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

window.addEventListener('scroll', () => {
    const title = document.getElementById('title');
    const desc = document.getElementById('desc');
    if (window.scrollY > 1) {
        title.style.transition = 'all 300ms ease-in-out';
        title.style.fontSize = '2rem';
        desc.style.display = 'none';
    } else {
        title.style.transition = 'all 500 ms ease-in-out'; 
		title.style.fontSize = '3 rem '; 
      	desc.style.display= 'block';
    }
});
const action_cart = () =>{
    const container_cart = document.getElementById('container-cart');
    container_cart.classList.toggle('hidden');
}
const item_cart = (product) => {
    const li = document.createElement('li');
    li.classList.add('flex','justify-between','items-center');
    li.innerHTML =`
      <div>${product.pid}</div>
      <div>${product.quantity}</div>
    `;
    
    const aux =` <img src="${product.image}" alt="${product.name}" class="w-16 h-16 object-cover rounded">
        <div class="flex flex-col">
           <span class="text-sm">${product.name}</span>
           <span class="text-sm">${product.price}</span>
        </div>
        <span class="text-sm">${product.quantity}</span>
    `;
    return li;
}


const header = document.getElementById('headertop');
const open_cart = document.getElementById('open-cart');
const count_prod_number = document.querySelector('.count-prod-number');
const list_prod = document.querySelector('.list-prod-cart');
const close_cart = document.getElementById('close-cart');
open_cart.addEventListener('click',action_cart)
close_cart.addEventListener('click',action_cart)

fetch('/api/carts/65d7412f146993f1576a03a9')
    .then(response => response.json())
    .then(data => {
        count_prod_number.textContent = data.products.length;
        list_prod.innerHTML = '';
        data.products.forEach(product => {
            list_prod.appendChild(item_cart(product));
        });
    });


</script>