{{> header}}
<main>
<section class="shop__title" style="background: url('image/{{section_title}}.jpg') top center no-repeat;
    background-size: cover;">
    <div class="shop__position">
        <p>PRODUCTOS || {{section_title}}</p>
        <h2 class="title-font title-big">
            + {{section_title}} +
        </h2>
    </div>
</section>
<section class="shop__filters__products">
    <div class="shop__filters">
        {{section_area}}
        <div id="filter-categories">
            <h6>Filtrar por categor√≠a</h6>
