<section class="h-max">
   <section class="relative w-full p-2">
      <div class="sticky top-0 bg-white p-2 w-full z-[10]">
         <div id="filter-categories" class="flex flex-col items-center justify-center md:flex-row">
            <h6 class="font-bold text-lg">Filtrar</h6>
            <ul class="w-full flex justify-center w-full gap-4 md:justify-end">
               <li class="hidden md:flex">
                  <div class="relative inline-block text-left">
                     <button class="dropdown-button inline-flex justify-center w-full px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm ">
                        Precio
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2 -mr-1" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                           <path fill-rule="evenodd" d="M6.293 9.293a1 1 0 011.414 0L10 11.586l2.293-2.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                     </button>
                     <div class="dropdown-menu origin-top-right absolute mt-2 w-max rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden">
                        <div class="py-2 p-2 flex flex-col justify-center items-center gap-1" role="menu" aria-orientation="vertical" aria-labelledby="dropdown-button">
                           <input type="number" placeholder="precio minimo" class="border-none outline-none py-2">
                           <span>a</span>
                           <input type="number" placeholder="precio maximo" class="border-none outline-none py-2">
                           <span class="text-center rounded-md cursor-pointer py-2 bg-red-700 w-full text-white">Filtrar</span>
                        </div>
                     </div>
                  </div>
               </li>
               <li class="">
                  <div class="relative inline-block text-left">
                     <button class="dropdown-button inline-flex justify-center w-full px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm ">
                        Destacados
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2 -mr-1" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                           <path fill-rule="evenodd" d="M6.293 9.293a1 1 0 011.414 0L10 11.586l2.293-2.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                     </button>
                     <div class="dropdown-menu origin-top-right absolute mt-2 w-max rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden">
                        <div class="py-2 p-2" role="menu" aria-orientation="vertical" aria-labelledby="dropdown-button">
                           <a href="#" class="block px-4 py-2 mb-1 text-sm text-gray-700 rounded-md bg-white hover:bg-gray-100" role="menuitem">Mayor a menor</a>
                           <a href="#" class="block px-4 py-2 mb-1 text-sm text-gray-700 rounded-md bg-white hover:bg-gray-100" role="menuitem">Menor a mayor</a>
                           <a href="#" class="block px-4 py-2 mb-1 text-sm text-gray-700 rounded-md bg-white hover:bg-gray-100" role="menuitem">A - Z</a>
                           <a href="#" class="block px-4 py-2 mb-1 text-sm text-gray-700 rounded-md bg-white hover:bg-gray-100" role="menuitem">Z - A</a>
                        </div>
                     </div>
                  </div>
               </li>
               <li class="">
                  <button id="filter-button" class="inline-flex justify-center w-full px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm ">
                     Filtrar
                  </button>
               </li>
            </ul>
         </div>
      </div>
      <div class="grid grid-cols-2 w-full h-full sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 2xl:grid-cols-5 gap-2">
         {{#each user.products}}
         <div class="h-max">
            {{> card_product _id=this._id title=this.title price=this.price photo=this.photo }}
         </div>
         {{/each}}
      </div>
   </section>
   <section id="container-category" class="fixed z-[101] top-0 left-0 h-full w-full bg-black bg-opacity-50 hidden">
      <div class="relative w-[300px] h-full bg-white">
         <div class="bg-white flex justify-end p-2 ">
            <button id="close-category" class="text-gray-600 transition hover:scale-110">
               <span class="sr-only">Close cart</span>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
               </svg>
            </button>
         </div>
         <h2 class="text-center text-3xl font-bold">Filtrar</h2>
      </div>
   </section>
</section>
<script>
    const dropdownButton = document.querySelectorAll('.dropdown-button');
    const dropdownMenu = document.querySelectorAll('.dropdown-menu');
    const filterButton = document.getElementById('filter-button');
    const closeCategory = document.getElementById('close-category');
    
   dropdownButton.forEach((button , i) => {
       button.addEventListener('click', () => {
           dropdownMenu[i].classList.toggle('hidden');
       });
   });
   const actionsCategory = () => {
      const containerCategory = document.getElementById('container-category');
      containerCategory.classList.toggle('hidden');
   }
   filterButton.addEventListener('click',actionsCategory);
   closeCategory.addEventListener('click',actionsCategory);
</script>