<div class="flex flex-col flex-grow">
	<div
		class="flex items-center flex-shrink-0 h-16 px-8 border-b border-gray-800"
	>
		<h1 class="text-lg font-medium">ACTULIZAR PRODUCTO</h1>
	</div>
	<div class="flex-grow p-6 overflow-auto bg-gray-800">
		<div class="flex gap-4">
			{{! Form }}
			<div>
				<form
					id="product-form"
					class="flex flex-col gap-4"
					enctype="multipart/form-data"
				>
					<input
						type="text"
						name="title"
						id="title-input"
						placeholder="Titulo de producto"
						class="border-none outline-none text-black px-4 py-2"
						value="{{admin.product.title}}"
					/>
					<textarea
						name="description"
						id="description-input"
						class="border-none outline-none text-black px-4 py-2 resize-none h-32"
						placeholder="DescripciÃ³n del producto"
					>{{admin.prodesc}}</textarea>
					<input
						type="text"
						name="code"
						id="code-input"
						placeholder="Codigo del producto: 123d1AS"
						class="border-none outline-none text-black px-4 py-2"
						value="{{admin.product.code}}"
					/>
					<input
						type="number"
						name="price"
						id="price-input"
						placeholder="Precio del producto: 112233"
						class="border-none outline-none text-black px-4 py-2"
						min="0"
						pattern="^[0-9]+"
						value="{{admin.product.price}}"
					/>
					<input
						type="number"
						name="stock"
						id="stock-input"
						placeholder="Stock del producto: 12"
						class="border-none outline-none text-black px-4 py-2"
						min="0"
						pattern="^[0-9]+"
						value="{{admin.product.stock}}"
					/>
					<input
						type="text"
						name="category"
						id="category-input"
						placeholder="mujer,hombre,buzos,remera,etc..."
						class="border-none outline-none text-black px-4 py-2"
						value="{{admin.product.category}}"
					/>
					<input
						id="file-input"
						type="file"
						name="photos"
						multiple
						onchange="previewImages(event)"
					/>
					<span
						id="submit-put"
						value=""
						class="border-none outline-none px-4 py-2 bg-gray-700 text-white cursor-pointer hover:bg-gray-600 transition-all duration-300 ease-in-out"
					>Actualizar Producto</span>
				</form>
			</div>
			{{! Preview }}
			{{!CARD}}
			<div>
				<div class="relative rounded-lg overflow-hidden w-[200px] text-black">
					{{#if admin.exist_product}}
						<img
							class="card-img w-full"
							src="{{admin.product.photo.[0]}}"
							alt="imagen nuevo producto"
							id="img-card"
						/>
					{{else}}
						<img
							class="card-img w-full"
							src="/image/noimgh.jpg"
							alt="imagen nuevo producto"
							id="img-card"
						/>
					{{/if}}
					<div
						class="absolute w-full bg-white bottom-0 flex flex-col justify-between p-4 min-h-20 gap-2"
					>
						<div>
							{{#if admin.exist_product}}
								<h3
									class="text-xs font-bold"
									id="title-card"
								>{{admin.product.title}}</h3>
								<p id="price-card">$ {{admin.product.price}}</p>
							{{else}}
								<h3 class="text-xs font-bold" id="title-card">Titulo de Producto</h3>
								<p id="price-card">$ 112233</p>
							{{/if}}
						</div>
					</div>
				</div>
			</div>
			{{! IMAGES PROD-}}
			<div
				class="h-[300px] w-[600px] flex overflow-x-hidden border bg-gray-200"
				id="image-preview"
			>
				{{#if admin.exist_product}}
					{{#each admin.product.photo}}
						<div
							class="w-full h-full"
							style="background: url('{{this}}') no-repeat center center / cover"
						></div>
					{{/each}}
				{{else}}
					<h1>PREVIEW IMAGENES, SOLO SE PERMITE 4 IMAGENES</h1>
				{{/if}}
			</div>
		</div>
		{{! SITE PROD-}}
		<div class="w-full h-max">
		</div>
	</div>
</div>
<script src="/js/admin/activeActionProduct.js"></script>