<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link 
      rel="shortcut icon" 
      href="/image/avatar.png" 
      type="image/png" />
    {{! ICONS }}
    <script
      src="https://kit.fontawesome.com/de8fe1cee1.js"
      crossorigin="anonymous"
    ></script>
    <script src="//cdn.tailwindcss.com"></script>
    {{!Link Swiper's CSS }}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    <title>{{ admin.title }}</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Anton&family=Brygada+1918:ital,wght@0,400..700;1,400..700&family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap');
      * {
        margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Josefin Sans", sans-serif;
      text-decoration: none;
      }

      * .font-brygada {
        font-family: "Brygada 1918", sans-serif;
      }

      * .font-josefin {
        font-family: "Josefin Sans", sans-serif;
      }
      * .font-anton {
        font-family: "Anton", sans-serif;
      }
      * .style-logo {
        text-shadow: 0px 0px 15px rgb(255, 255, 255);
      }

      *::-webkit-scrollbar {
        width: 8px;
      }

      *::-webkit-scrollbar-track {
        background: rgb(255, 255, 255);
      }

      *::-webkit-scrollbar-thumb {
        background-color: rgb(0, 0, 0);
        border: 3px solid rgb(0, 0, 0);
      }
    </style>
    <style>
  .loader {
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-left-color: white;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
</style>
  </head>
  <body class="bg-white">
        <!-- Header -->
        {{>admin/header user=admin.info}}

        <!-- Main -->
        <main  id="layout-admin" class="w-full h-full relative p-2">
            <!-- Container -->
            {{{body}}}
            <div id="loader" class="fixed inset-0 bg-gray-800 bg-opacity-75 flex items-center justify-center hidden">
              <div class="loader"></div>
            </div>
        </main>
  </body>
</html>


